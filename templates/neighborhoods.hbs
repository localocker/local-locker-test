---
{
    "stream": {
        "$id": "sites-neighborhoods",
        "source": "knowledgeGraph",
        "destination": "pages",
        "fields": [
            "id", 
            "uid", 
            "name", 
            "address", 
            "geocodedCoordinate",
            "hours",
            "slug",
            "neighborhood",
            "mainPhone",
            "frequentlyAskedQuestions",
            "photoGallery",
            "videos",
            "accessHours",
            "c_pageName",
            "c_pageSubtitleH2",
            "c_pageTextBlockText",
            "c_pageTextBlockTitleH3",
            "c_relatedLocations.c_locationNickname",
            "c_relatedLocations.address",
            "c_relatedLocations.geocodedCoordinate",
            "c_relatedLocations.mainPhone",
            "c_relatedLocations.c_heroImagePage",
            "c_relatedLocations.c_limitedAvailability",
            "c_relatedLocations.websiteUrl",
            "c_otherNeighborhoods.neighborhood",
            "c_otherNeighborhoods.websiteUrl",
            "c_otherNeighborhoods.slug"
        ], 
        "filter" : {
            "entityTypes": [
                "ce_neighborhood"
            ]
        }
    },
    "urlFormat": "{{slug}}"
}
---
<!DOCTYPE html>
<html lang="en">
    <head>

        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <script src="../main.js" async></script>
        <link rel="stylesheet" href="../main.css" />
        <script
        src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"
        async
        defer
        ></script>

        <title>{{name}}</title>
        {{>schema}}
        <link rel="shortcut icon" type="image/jpg" href="/images/favicon-32x32.png"/>
    </head>
    <body>      
        <div class="flex min-h-screen w-full"> 
            {{!-- {{>sidebar}} --}}
            <div class="w-full">
                {{>nav}}
                    <div class="bg-gradient-to-r from-gray-100 to-blue-100">
                        <div class="container mx-auto max-w-screen-xl">
                            <div class="px-8 pt-12">
                                {{>neighborhood-details}}   
                            </div>  
                        </div>
                    </div>
                    <div class="bg-gradient-to-r from-gray-100 to-blue-200">                           
                        <div class="container mx-auto max-w-screen-xl">
                            <div class="">
                                {{>relatedLocations}}   
                            </div>
                        </div>
                    </div>
                    <div class="bg-white">
                        <div class="container mx-auto max-w-screen-xl">
                            <div class="">
                                {{>whyLL}}
                            </div> 
                            <div class="px-8 py-8">
                                {{>reviews}}
                            </div>  
                            <div class="px-8 py-8">
                                {{>visible-carousel}}
                            </div> 
                        </div> 
                    </div>
                    <div class="bg-white" style="background-image:linear-gradient(0deg,#00173C 36%,#FFFFFF 36%)">
                        <div class="container mx-auto max-w-screen-xl">
                            <div class="px-8 py-8">
                                {{>video videos}} 
                            </div> 
                        </div>
                    </div>
                    <div class="bg-gray-50 mb-10">
                        <div class="container mx-auto max-w-screen-xl">
                            <div class="px-8 py-8">
                                {{>faqs-neighborhood frequentlyAskedQuestions}}
                            </div>
                        </div>                             
                    </div>
                    <div class="grid md:grid-cols-2">
                        <img class="w-full h-60 object-cover object-bottom md:h-96" src="{{photoGallery.[0].image.url}}">
                        <div class="bg-ll-red text-3xl px-10 py-12 font-bold text-white flex justify-center items-center text-center">Storage solutions walking distance from home.</div>
                    </div>
                    <div class="bg-white">
                        <div class="container mx-auto max-w-screen-xl">
                            <div class="px-8 pt-8 pb-12">
                                {{>findByNeighborhood (sortBy c_otherNeighborhoods "neighborhood")}}
                            </div>  
                        </div>                             
                    </div>
                <div class="w-full bg-gray-100">
                    <div class="centered-container">
                        {{>footer}}
                    </div>
                </div>
            </div>
        </div>  
        {{>bodyTag}}      
    </body> 
</html>