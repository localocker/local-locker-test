<div>
    <div class="mt-4">
        <h1 class='text-5xl font-extrabold mb-6 text-ll-blue'> {{neighborhood}} Storage Units </h1>
        <h3 class='text-2xl font-extrabold  text-ll-blue'> Local Locker Storage - Discover Storage Near You </h3>
        <div class="location-reviews-count"></div>        
    </div>
    
    <div class="mt-4">
        <div class="grid lg:grid-cols-2 gap-x-4 gap-y-4 grid-cols-1">
            <div class=''>
                <h3>Address</h3>
                <p id="address"> {{address.line1}} {{address.city}}, {{address.region}} {{address.postalCode}}</p>
            </div>
            <div class=''>
                <h3>Phone</h3>
                <p>{{phoneNumber "US" mainPhone "NATIONAL"}}</p>
            </div>
            <div class=''>
                <h3>Access Hours</h3>
                {{>hours accessHours}}
            </div>
            <div class=''>
                <h3>Support Hours</h3>
                {{>hours hours}}
            </div>
        </div>
    </div>
</div>