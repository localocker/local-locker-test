<div class="hours-list">  
  <script>console.log('inbound hours\n{{this}}');</script>
  {{#with (formatHours this "Monday" "TimeFormatShort" "DateFormatShort") }}
        <script>console.log('formatHours array\n{{this.regularHours}}');</script>
      {{#each this.regularHours}}
        <script>console.log('regularHours array\n{{this.displayDay}}');</script>
        <p><strong>{{this.displayDay}}:</strong>
        {{#if this.isClosed}}Closed{{/if}}
        {{#if this.is247}}Open 24/7{{/if}}
        {{#each this.openIntervals}}
          {{this.start}}-{{this.end}}
        {{/each}}
        </p>
      {{/each}}
  {{/with}}
</div>
